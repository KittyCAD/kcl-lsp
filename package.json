{
  "name": "kcl-language-server",
  "description": "KCL language server",
  "license": "MIT",
  "version": "0.1.0",
  "categories": [],
  "keywords": [
    "language-server",
    "tower-lsp"
  ],
  "repository": {
    "url": "https://github.com/kittycad/kcl-language-server"
  },
  "engines": {
    "vscode": "^1.66.0"
  },
  "enabledApiProposals": [],
  "activationEvents": [
    "onLanguage:kcl"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "kcl",
        "extensions": [
          ".kcl"
        ]
      }
    ],
    "configuration": {
      "type": "object",
      "title": "kcl-language-server",
      "properties": {
        "kcl-language-server.trace.server": {
          "type": "string",
          "scope": "window",
          "enum": [
            "off",
            "messages",
            "verbose"
          ],
          "enumDescriptions": [
            "No traces",
            "Error only",
            "Full log"
          ],
          "default": "off",
          "description": "Traces the communication between VS Code and the language server."
        }
      }
    },
    "configurationDefaults": {
      "[kcl]": {
        "editor.semanticHighlighting.enabled": true
      }
    }
  },
  "scripts": {
    "postinstall": "cd client && yarn install",
    "vscode:prepublish": "yarn run esbuild-base -- --minify",
    "deploy": "vsce publish --yarn",
    "esbuild-base": "esbuild ./client/src/extension.ts --bundle --outfile=out/main.js --external:vscode --format=cjs --platform=node",
    "esbuild": "yarn run esbuild-base -- --sourcemap",
    "esbuild-watch": "yarn run esbuild-base -- --sourcemap --watch",
    "fmt": "prettier --write ./client",
    "fmt-check": "prettier --check ./client",
    "test-compile": "tsc -p ./",
    "compile": "cross-env NODE_ENV=production tsc -b",
    "watch": "rm -rf dist && tsc -b -w",
    "lint": "eslint client --fix --ext ts",
    "pretest": "yarn run compile && yarn run lint",
    "test": "node ./dist/test/runTest.js",
    "build": "webpack --config webpack.config.js",
    "package": "vsce package --no-dependencies",
    "publish": "vsce publish --no-dependencies"
  },
  "devDependencies": {
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.0.0",
    "@types/node": "^12.12.0",
    "@types/vscode": "1.65.0",
    "@typescript-eslint/eslint-plugin": "^3.8.0",
    "@typescript-eslint/parser": "^3.8.0",
    "@vscode/test-electron": "^2.3.4",
    "@vscode/vsce": "^2.21.0",
    "cross-env": "^7.0.2",
    "electron-rebuild": "^1.11.0",
    "esbuild": "^0.15.10",
    "eslint": "^7.6.0",
    "eslint-config-react-app": "^7.0.1",
    "glob": "^7.1.7",
    "mocha": "^8.0.1",
    "prettier": "^3.0.3",
    "typescript": "^4.4.3",
    "vscode-test": "^1.4.0",
    "vscode-uri": "^3.0.2",
    "webpack": "^5.82.1"
  },
  "dependencies": {
    "vscode-languageclient": "^8.0.2"
  },
  "prettier": {
    "trailingComma": "es5",
    "tabWidth": 2,
    "semi": false,
    "singleQuote": true
  }
}
